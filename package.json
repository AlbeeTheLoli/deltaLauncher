{
  "name": "delta",
  "productName": "Delta",
  "version": "0.0.1",
  "description": "Launcher for minecraft project Delta",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && cd src/svelte && npm run build",
    "dev": "cd src/svelte && npm run dev && cd ../../",
    "start": "npm run build && electron-forge start",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "build-exe": "npm run build && electron-builder build --win --publish never",
    "deploy": "npm run build && electron-builder build --win --publish always"
  },
  "keywords": [],
  "author": {
    "name": "AlbeeTheLoli",
    "email": "sawukalu164@gmail.com"
  },
  "license": "MIT",
  "build": {
    "appId": "com.albee.app",
    "productName": "Delta Launcher",
    "target": "nsis",
    "directories": {
      "buildResources": "resources",
      "output": "build"
    },
    "extraResources": [
      "src/res/java/"
    ],
    "win": {
      "publish": {
        "provider": "github"
      }
    },
    "publish": [
      {
        "provider": "github",
        "owner": "AlbeeTheLoli",
        "repo": "deltaLauncher"
      }
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@types/fs-extra": "^9.0.11",
    "@types/lodash.merge": "^4.6.6",
    "@types/node-fetch": "^2.5.11",
    "@types/request": "^2.48.7",
    "@types/rimraf": "^3.0.1",
    "electron-log": "^4.3.5",
    "extract-zip": "^2.0.1",
    "fs-extra": "^10.0.0",
    "get-folder-size": "^2.0.1",
    "keytar": "^7.7.0",
    "lodash.merge": "^4.6.2",
    "merge-files": "^0.1.2",
    "node-fetch": "^2.6.1",
    "request": "^2.88.2",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "electron": "13.3.0",
    "electron-builder": "^22.14.13"
  },
  "prettier": {
    "printWidth": 320,
    "tabWidth": 4,
    "trailingComma": "es5"
  }
}
